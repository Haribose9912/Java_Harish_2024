package Day2;

public class OccurSubString {

	    public static void main(String[] args) {
	        String mainString = "This is a test. This test is just a test.";
	        String subString = "test";

	        int subStringLength = subString.length();

	        for (int i = 0; i <= mainString.length() - subStringLength; i++) {
	            if (mainString.substring(i, i + subStringLength).equals(subString)) {
	                System.out.println("Substring found at index: " + i);
	            }
	        }
     }
}