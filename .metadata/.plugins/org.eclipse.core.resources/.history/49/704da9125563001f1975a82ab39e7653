package Day2;

public class OccurSubString {

	    public static void main(String[] args) {
	        String s = "This is a test. This test is just a test.";
	        String ss = "test";
	        int ss_count = 0;
	        int ssl = ss.length();

	        for (int i = 0; i <= s.length() - ssl; i++) {
	            if (s.substring(i, i + ssl).equals(ss)) {
	            	ss_count++;
	                System.out.println("Substring found at index: " + i+" -> "+ ss);
	                System.out.println("Substring count: " +ss_count);
	            }
	        }
     }
}